# for new crappy grep:


sed -e 's/^\(.*[:-][0-9mK\[]*[:-]\)\(.*\)/\1\2/g' \
    -e '{
      :start
      s/[[0-9]*[mK]\(.*\)/\1/g
      t start
    }' \
    -e 's///' \
    -e 's/^\([^:]*\):\([0-9]*\):/[32m[01m\1[00m:\2:   /' \
    -e 's/^\([^: -]\+\)-\([0-9]\+\)-/[32m\1[00m:\2:   /'
